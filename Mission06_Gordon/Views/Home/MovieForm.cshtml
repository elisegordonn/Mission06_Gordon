@{
    ViewData["Title"] = "Add a Movie";
}

@model Movies

<h1>Add a Movie:</h1>
<br />

<form method="post">
    <input type="hidden" asp-for="MovieId" />

    <select asp-for="CategoryId">
        <option value="">Select a Category:</option>
        @if (ViewBag.Categories != null)
        {
            @foreach (Categories c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.Category</option>
            }
        }
    </select>
    <br />
    <br />
    <label asp-for="Title">Movie Title:</label>
    <input asp-for="Title" data-val="true" data-val-required="Title is required." />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />
    <br />
    <label asp-for="Year">Year:</label>
    <input asp-for="Year" min="1888" data-val="true" data-val-required="Year is required." data-val-range="Year must be 1888 or later." />
    <span asp-validation-for="Year" class="text-danger"></span>
    <br />
    <br />
    <label asp-for="Director">Director:</label>
    <input asp-for="Director"  />
    <br />
    <br />
    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating" >
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <br />

    <!-- not required fields: -->
    <label asp-for="Edited">Edited?</label>
    <select asp-for="Edited" data-val="true" data-val-required="Edited is required.">
        <option value="false">No</option>
        <option value="true">Yes</option>
    </select>
    <span asp-validation-for="Edited" class="text-danger"></span>
    <br />
    <br />
    <label asp-for="LentTo">Lent To:</label>
    <input asp-for="LentTo" />
    <br />
    <br />
    <label asp-for="CopiedToPlex">Copied to Plex?</label>
    <select asp-for="CopiedToPlex" data-val="true" data-val-required="Copied to Plex is required.">
        <option value="false">No</option>
        <option value="true">Yes</option>
    </select>
    <span asp-validation-for="CopiedToPlex" class="text-danger"></span>
    <br />
    <br />
    <label asp-for="Notes">Notes:</label>
    <input asp-for="Notes" maxlength="25" data-val="true" data-val-length="Notes must be at most 25 characters long." />
    <span asp-validation-for="Notes" class="text-danger"></span>
    <br />
    <br />
    <button type="submit" class="sub-movie">Submit Movie</button>

</form>
