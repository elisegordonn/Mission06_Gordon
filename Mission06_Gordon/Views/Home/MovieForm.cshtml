@{
    ViewData["Title"] = "Add a Movie";
}

@model Form

<h1>Add a Movie:</h1>
<br />

<form method="post">
    <label asp-for="Category">Category:</label>
    <input asp-for="Category" />
    <span asp-validation-for="Category"></span>
    <br />
    <br />
    <label asp-for="Title">Movie Title:</label>
    <input asp-for="Title"  />
    <span asp-validation-for="Title"></span>
    <br />
    <br />
    <label asp-for="Year">Year:</label>
    <input asp-for="Year"  />
    <span asp-validation-for="Year"></span>
    <br />
    <br />
    <label asp-for="Director">Director:</label>
    <input asp-for="Director"  />
    <span asp-validation-for="Director"></span>
    <br />
    <br />
    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating" >
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <span asp-validation-for="Rating"></span>
    <br />
    <br />

    <!-- not required fields: -->
    <label asp-for="Edited">Edited?</label>
    <select asp-for="Edited" >
        <option value="false">No</option>
        <option value="true">Yes</option>
    </select>    
    <br />
    <br />
    <label asp-for="LentTo">Lent To:</label>
    <input asp-for="LentTo" />
    <br />
    <br />
    <label asp-for="Notes">Notes:</label>
    <input asp-for="Notes" maxlength="25" />
    <br />
    <br />
    <button type="submit" class="sub-movie">Submit Movie</button>
</form>
